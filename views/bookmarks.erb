<% @bookmarks.each do |bookmark| %>
	<div class="bookmark_name">
	<%= bookmark["name"] %>
	</div>
<% end %>

<% @bookmarks.each do |bookmark| %>
	<div class="bookmark_url">
	<%= bookmark["link"] %>
	</div>
<% end %>

<form action="/bookmarks" method="POST">
	Name: <input type="text" name="name">
	URL: <input type="text" name="link">
	<input type="submit" value="Create">
</form>
