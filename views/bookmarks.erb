<div class="navbar navbar-inverse navbar-top" role="navigation">
  <div class="container">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a class="navbar-brand" href="#">Bookmarkz!</a>
    </div>
    <div class="navbar-collapse collapse">
      <form class="navbar-form navbar-right" role="form" action="/bookmarks" method="POST">
        <div class="form-group">
          <input type="text" name="name" class="form-control" placeholder="Bookmark Name">
        </div>
        <div class="form-group">
          <input type="text" name="url" class="form-control" placeholder="Full URL">
        </div>
        <div class="form-group">
          <input type="text" name="category" class="form-control" placeholder="Category">
        </div>
        <button type="submit" class="btn btn-success">Bookmark!</button>
      </form>
    </div>
  </div>
</div>

<div class="container pscott">
  <% @categories.each do |category| %>
    <% @book_cat = run_sql("SELECT * FROM bookmarks WHERE category = '#{category}'") %>
      <div class="col-md-4"><h3><%= category %></h3>
      <% @book_cat.each do |bookmark| %>
        <a href="<%= bookmark['url'] %>" target="_blank"><%= bookmark['name'] %></a>
      <% end %>
    </div>
  <% end %>
</div>
</div>
