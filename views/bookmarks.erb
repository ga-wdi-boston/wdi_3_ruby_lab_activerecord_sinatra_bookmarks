<div class="col-md-5">
	<div class="boxy">
		<div class="page-header">
			<h1>Enter a new bookmark</h1>
		</div>
		<form class="form" role="form" action="/bookmarks" method="POST">
			<div class="form-group">
		    <input type="text" class="form-control" id="category" name="category" placeholder="Bookmark Category" autofocus required>
		  </div>
		  <div class="form-group">
		    <input type="text" class="form-control" id="name" name="name" placeholder="Name of Site" required>
		  </div>
		  <div class="form-group">
		    <input type="text" class="form-control" id="url" name="url" placeholder="Bookmark URL" required>
		  </div>
		  <button type="submit" class="btn btn-primary">Submit</button>
		</form>
	</div>
</div>
<div class="col-md-7">
	<div class="boxy overflow">
		<div class="page-header">
			<h1>Bookmark List</h1>
		</div>
			<% @categories.each do |c| %>
				<% @bookmarks = run_sql("SELECT * FROM bookmarks WHERE category='#{c['category']}'") %>
				<h2><%= c['category'] %></h2>
				<% @bookmarks.each do |b| %>
					<div>
						<a href="http://<%= b['url'] %>" target="_blank"><%= b['name'].upcase %></a>
					</div>
				<% end %>
			<% end %>
	</div>
</div>
</div>
