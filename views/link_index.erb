
<h1>Keep that link tight</h1>
<form action="/links/create" method="post">
	<div>Long Link: <input type="text" name="long_url" /></div>
	<button type="submit">Go down</button>
</form>


<div class="post-container">
<% @links.each do |link| %>
	Long Link: <a href="<%= link.long_url %>">
		<%=link.long_url%></a>
	Short Link: <a href='<%= link.short_url%>'><%=link.short_url%></a>

	<a href="/links/<%= link.id %>">Discuss </a>

	<form action="/links/<%=link.id%>/delete" method="post">
	<input type="submit" name="delete link" value="delete" />
	</form>
		</br>
<% end %>
</div>